<table class="table table-hover">
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Product</th>
      <th>Price</th>
    </tr>
  </thead>
  <% @cart.items.each do |item| %>
    <tr>
      <td>
        <%= item.quantity %>
      </td>
      <td>
        <%= image_tag item.product.image.thumb %>
        <%= link_to item.product.name, item.product %>
      </td>
      <td class="text-right">
        <%= number_to_currency item.total_price, :unit => "Price: € " %>
      </td>
    </tr>	  
  <% end %>
</table>
<p><b>
  <%= number_to_currency @cart.total_price, :unit => "Total Price: € " %>
</b></p>
<p>
  <%= link_to 'Continue Shopping', :controller => :products %>
  |
  <%= link_to "Checkout", checkout_cart_path, class: "btn btn-primary" %>
</p>